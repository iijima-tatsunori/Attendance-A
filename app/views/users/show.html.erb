<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td>
        <%= link_to "←", user_path(date: @first_day.prev_month), class: "btn btn-primary" %>
        <%= "　" %>
        <%= l(@first_day, format: :middle) %><%= "　" %>時間管理表
        <%= "　" %>
        <%= link_to "→", user_path(date: @first_day.next_month), class: "btn btn-primary" %>
      </td>
      <td>
        指定勤務開始時間<%= "　" %><%= format_basic_info(@user.designated_work_start_time) %>
        <br />
        指定勤務終了時間<%= "　" %><%= format_basic_info(@user.designated_work_end_time) %>
      </td>
      <td colspan="3">基本時間<%= "　" %><%= format_basic_info(@user.basic_work_time) %></td>
      <td>初日<%= "　" %><%= l(@first_day, format: :short2) %></td>
    </tr>
    <tr>
      <td>所属<%= "　" %><%= @user.affiliation.present? ? @user.affiliation : "未所属" %></td>
      <td>名前<%= "　" %><%= @user.name %></td>
      <td>コード</td>
      <td><%= @user.id %></td>
      <td>出勤日数<%= "　" %>：<%= @worked_sum %>日</td>
      <td>末日<%= "　" %><%= l(@last_day, format: :short2) %></td>
    </tr>
  </table>
</div>

<div class="btn-user-show">
  <%= link_to "1ヶ月の勤怠編集へ", attendances_edit_one_month_user_path, class: "btn btn-primary" %>
  <br />
  <%= link_to "CSV出力", user_path(format: :csv), class: "btn btn-primary" %>
</div>


<div>
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
        <td rowspan="3">残業申請</td>
        <td rowspan="3">日付</td>
        <td rowspan="3">曜日</td>
        <td colspan="8">実績</td>
        <td colspan="5">所定外勤務</td>
      </tr>
      <tr>
        <td colspan="3">出社</td>
        <td colspan="3">退社</td>
        <td rowspan="2">在社時間</td>
        <td rowspan="2">備考</td>
        <td colspan="2">終了予定時間</td>
        <td rowspan="2">時間外時間</td>
        <td rowspan="2">業務処理内容</td>
        <td rowspan="2">指示者確認</td>
      </tr>
      <tr>
        <td>時</td>
        <td>分</td>
        <td></td>
        <td>時</td>
        <td>分</td>
        <td></td>
        <td>時</td>
        <td>分</td>
      </tr>
    </thead>

    <tbody>
      <% @attendances.each do |day| %>
        <tr>
          <td><%= link_to "残業申請", attendances_edit_overtime_info_user_path(@user, date: day.worked_on), remote: true, class: "btn btn-primary" %></td>
          <td><%= l(day.worked_on, format: :short) %></td>
          <td>
          <% if day.worked_on.wday == 0 %>
            <font color="RED">
              <%= $days_of_the_week[day.worked_on.wday] %>
            </font>
          <% elsif day.worked_on.wday == 6 %>
            <font color="BLUE">
              <%= $days_of_the_week[day.worked_on.wday] %>
            </font>
          <% else %>
            <%= $days_of_the_week[day.worked_on.wday] %>
          <% end %>
          </td>
          <td>
            <% if btn_text = attendance_state(day) %>
              <%= link_to "#{btn_text}登録", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendances "%>
            <% end %>
          </td>
          <td><%= l(day.started_at, format: :time) if day.started_at.present? %></td>
          <td><%= l(day.finished_at, format: :time) if day.finished_at.present? %></td>
          <td>
          <% if day.started_at.present? && day.finished_at.present? %>
            <%= str_times = working_times(day.started_at, day.finished_at) %>
            <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
          <% end %>
          </td>
          <td><%= day.note %></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <td></td>
        <td colspan="2">累計日数</td>
        <td colspan="6">総合勤務時間</td>
        <td>累計在社時間</td>
        <td></td>
        <td colspan="4", rowspan="2"></td>
        <%= form_with(model: @user, url: attendances_update_one_month_user_path(date: @first_day), local: true, method: :patch) do |f| %>
          
          <td rowspan="2">
            所属長承認<%= " " %>
            <% if @user.department.present? %>
              <%= "上長Bに申請中" %>
            <% else %>
              <%= "未" %>
            <% end %>
            <br />
            <%= f.select :name, [["", 0],["上長B", 1],["上長A", 2]] %>
            <br />
            <%= f.submit "申請", class: "btn btn-primary" %>
          </td>
          
        <% end %>
      </tr>
      <tr>
        <td></td>
        <td colspan="2"></td>
        <td colspan="6"></td>
        <td><%= format("%.2f", @total_working_times.to_f) %></td>
        <td></td>
      </tr>
    </tfoot> 
  </table>
</div>

<!--モーダルウインドウ表示-->
<div id="edit-overtime-info" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>