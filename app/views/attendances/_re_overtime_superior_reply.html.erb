<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-body">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true"><%= link_to "&times;".html_safe, "#{@url}" %></span>
      </button>
      <div class="row">
        <div class="col-md-12">
          <%= form_with(model: @user, url: attendances_request_overtime_reply_user_path(current_user, date: @first_day), load: true, method: :patch) do |f| %>
            <% @users.each do |user| %>
            
              <% attendances = Attendance.where(user_id: user.id).where(overtime_status: "申請中") %>
              <% attendances.each do |attendance| %>
                <% if attendance.overtime_superior_id == current_user.id && attendance.overtime_apploval == 2 && @user.id == user.id %>
                  <h3 class="center">【<%= user.name %>からの残業申請】</h3>
                  <table class="table table-condensed table-bordered  table-hover">
                    <thead>
                      <tr>
                        <th class="center">日付</th>
                        <th class="center">曜日</th>
                        <th class="center">終了予定時間</th>
                        <th class="center">指定勤務終了時間</th>
                        <th class="center">時間外時間</th>
                        <th class="center">業務処理内容</th>
                        <th class="center">指示者確認<%= "\u329e" %></th>
                        <th class="center">変更</th>
                      </tr>
                    </thead>
                <% break %>
                <% end %>
              <% end %>
                
              <% attendances = Attendance.where(user_id: user.id).where(overtime_status: "申請中").merge(Attendance.order("attendances.worked_on ASC")) %>
              <% attendances.each do |attendance| %>
                <% if attendance.overtime_superior_id == current_user.id && attendance.overtime_apploval == 2 && @date == attendance.worked_on %>
                
                  <%= f.fields_for "attendances[]", attendance do |at| %>
                    <tbody>
                      <tr>
                        <td class="center"><%= l(attendance.worked_on, format: :short) %></td>
                        <td class="center">
                          <% if attendance.worked_on.wday == 0 %>
                            <font color="#ff000">
                          <% elsif attendance.worked_on.wday == 6 %>
                            <font color="#0033cc">
                          <% end %>
                          <%= $days_of_the_week[attendance.worked_on.wday] %>
                        </td>
                        <td class="center"><%= attendance.finished_plan_at.floor_to(15.minutes).strftime("%R") %></td>
                        <td class="center"><%= user.designated_work_end_time.strftime("%R") %></td>
                        <td class="center"><%= format("%.2f", attendance.overtime_hours.to_f.floor_to(0.25)) %></td>
                        <td class="center"><%= attendance.business_process_content %></td>
                        <td class="center"><%= at.select :overtime_status, ["なし", "申請中", "承認", "否認"], {}, class: "form-control" %></td>
                        <td class="center">
                          <%= at.check_box :overtime_check %>
                          <%= at.hidden_field :overtime_apploval, value: 3 %>
                        </td>
                      </tr>
                    </tbody>
                  <% end %>
                <% end %>
              <% end %>
              </table>
            <% end %>
            <div class="center">
              <% if has_overtime_apply.count == 0 %>
                <h1>申請情報はありません。</h1>
              <% else %>
                <%= f.submit "変更を送信する", class: "btn btn-lg btn-primary" %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>